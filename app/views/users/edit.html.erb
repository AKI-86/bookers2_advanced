<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-0 mx-auto">
      <h1>User info</h1>
        <% if @user.errors.any? %>
          <h2><%= @user.errors.count %>errors prohibited this obj from being saved</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      <%= form_with model: @user, method: :patch do |f| %>
      <p>Name</p>
      <%= f.text_field :name, value: @user.name %>
      <p>Image</p>
      <%= f.file_field :profile_image, accept: "image/*" %>
      <p>Introduction</p>
      <%= f.text_area :introduction, value: @user.introduction %></br>
      <%= f.submit 'Update User' %>
      <% end %>
    </div>
  </div>
</div>