<h2>Follow Users</h2>
<% if @users.exists? %>
  <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image, size: "50x50" %>
              <% else %>
                <%= image_tag 'default-image.jpg', size: "50x50" %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
            <td><%= render "relationships/btn", user: user, options: { class: "follow-link" } %></td>
            <td><%= link_to "Show", user_path(user)%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>