<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-0 mx-auto">
      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
      <h2><%= @book.errors.count %>errors prohibited this obj from being saved</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book, method: :patch do |f| %>

        <p>Title</p>
        <%= f.text_field :title, value: @book.title %>

        <p>Opinion</p>
        <%= f.text_area :body, value: @book.body %></br>

        <%= f.submit 'Update Book' %></br>
        <%= link_to "Show",book_path %>
        |
        <%= link_to "Back",books_path %>
      <% end %>
    </div>
  </div>
</div>
