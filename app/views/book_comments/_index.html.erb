
<% @book.book_comments.each do |book_comment| %>
    <% if @book.user.profile_image.attached? %>
      <%= image_tag @book.user.profile_image, size: "50x50" %>
    <% else %>
      <%= image_tag 'default-image.jpg', size: "50x50" %>
    <% end %>
              <td><%= book_comment.comment %></td>
  <td><% if book_comment.user == current_user %></td>
  <td>
    <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true  %>
    <% end %>
  </td></br>
    <%= link_to @book.user.name, user_path(@book.user) %>
  </td></br>
<% end %>
